<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/lytPostHead"
                layout="@layout/card_item_header"/>

            <View
                android:id="@+id/vSeparator"
                android:layout_below="@+id/lytPostHead"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDivider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_8"
                android:layout_below="@+id/vSeparator">

                <ImageView
                    android:id="@+id/imgPhoto"
                    android:layout_width="@dimen/dimen_320"
                    android:layout_height="@dimen/dimen_320"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginLeft="@dimen/dimen_4"
                    android:layout_marginRight="@dimen/dimen_16"
                    android:minWidth="?android:attr/listPreferredItemHeight"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@color/colorTextSecondary"
                    android:textStyle="italic" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>